{
  "name": "civic-education-app",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "detox:build:ios": "detox build --configuration ios.sim.debug --loglevel verbose",
    "detox:test:ios": "detox test --configuration ios.sim.debug --loglevel verbose",
    "detox:build:android": "detox build --configuration android.emu.debug",
    "detox:test:android": "detox test --configuration android.emu.debug --loglevel verbose"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.5",
    "@hookform/resolvers": "^5.2.2",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^7.4.7",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "@tanstack/react-query": "^5.90.2",
    "expo": "~53.0.24",
    "expo-linear-gradient": "~14.1.5",
    "expo-media-library": "^18.2.0",
    "expo-status-bar": "~2.2.3",
    "nativewind": "^4.2.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.64.0",
    "react-native": "0.79.6",
    "react-native-confirmation-code-field": "^8.0.1",
    "react-native-dash-2": "^0.2.3",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-star-rating-widget": "^1.9.2",
    "react-native-svg": "15.11.2",
    "react-native-web": "^0.20.0",
    "react-native-worklets": "^0.6.0",
    "toastify-react-native": "^7.2.3",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "detox": "^20.43.0",
    "jest": "^29.7.0",
    "jest-expo": "^53.0.0",
    "react-test-renderer": "19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup-tests.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-reanimated|@react-navigation|nativewind|react-native-css-interop|expo|expo-modules-core|expo-status-bar)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1",
      "^assets/(.*)": "<rootDir>/assets/$1"
    }
  },
  "private": true
}
